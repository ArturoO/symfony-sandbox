{% extends 'base.html.twig' %}

{% block title %}
{{ title }}
{% endblock %}

{% block body %}
<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Title</th>
				<th>Price</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		    {% for product in products %}
			<tr>
				<td>{{ product.id }}</td>
				<td><a href="{{ path('product', {'id': product.id}) }}">{{ product.name }}</a></td>
				<td>{{ product.price }}</td>
				<td>
					<a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary">Edit</a>
					<a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-danger">Delete</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
